{
  "private": true,
  "type": "module",
  "name": "@ceti/pnpm-monorepo-template",
  "description": "pnpm monorepo with turbo",
  "repository": "https://github.com/OrangeSpatial/pnpm-monorepo-template.git",
  "author": {
    "name": "orange"
  },
  "license": "MIT",
  "engines": {
    "pnpm": ">=8"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:watch": "turbo run build:watch",
    "check:exports": "turbo run check:exports",
    "clean": "turbo run clean",
    "test": "pnpm -r --if-present test",
    "test:unit": "pnpm -r --if-present test:unit",
    "test:integration": "pnpm -r --if-present test:integration",
    "prepare": "is-ci || husky"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.4",
    "@types/node": "20.9.0",
    "husky": "^9.1.6",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.2.10",
    "rimraf": "^6.0.1",
    "taze": "^0.17.2",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "turbo": "^2.1.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vitest": "^2.1.2"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*": "pnpm prepare"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
